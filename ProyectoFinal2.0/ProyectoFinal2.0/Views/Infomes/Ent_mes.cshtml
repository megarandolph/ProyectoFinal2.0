@model IEnumerable<ProyectoFinal2._0.Empleados>

@{
    ViewBag.Title = "Ent_mes";
}

<h2>Ent_mes</h2>
@using (Html.BeginForm())
{
    <p>
        Buscar por Mes: <input type="number" name="mes" id="mes" placeholder="Numero del mes" />
        <input type="submit" value="Buscar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.año_ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emp_codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo.cargo1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mes.mes1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.año_ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emp_codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.cargo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamentos.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes.mes1)
            </td>

        </tr>
    }

</table>

